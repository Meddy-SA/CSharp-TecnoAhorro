@model TecnoCredito.Models.ViewModels.ProductListViewModel

<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <title>Lista de Productos</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th,
    td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }

    th {
      background-color: #f2f2f2;
    }

    .header {
      text-align: center;
      margin-bottom: 20px;
    }

    .date {
      text-align: right;
      margin-bottom: 10px;
    }
  </style>
</head>

<body>
  <div class="header">
    <h1>Lista de Productos</h1>
  </div>
  <div class="date">
    Fecha de generaci√≥n: @Model.GeneratedDate.ToString()
  </div>
  <table>
    <thead>
      <tr>
        <th>SKU</th>
        <th>Nombre</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Precio</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var product in Model.Products)
      {
      <tr>
        <td>@product.SKU</td>
        <td>@product.Name</td>
        <td>@product.Brand</td>
        <td>@product.Model</td>
        <td>@product.Price.ToString()</td>
      </tr>
      }
    </tbody>
  </table>
</body>

</html>
